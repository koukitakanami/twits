<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>

<%= link_to "つぶやく", new_twit_path %>

<h1>ツイート一覧</h1>


<% @twits.each do |twit| %>
  <p>本文:<%= twit.content %></p>
  <%= Time.now.strftime("%Y年%m月%d日 %H時%M分") %>
  <br>
  <%= link_to "ツイートを編集する", edit_twit_path(twit.id), class: 'btn btn-default btn-sm btn-success'  %>
  
  <%= link_to "ツイートを削除する", twit_path(twit.id), method: :delete,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger'  %>
  <p>---------------------------  </p>
<% end %>
  </div>
</div>