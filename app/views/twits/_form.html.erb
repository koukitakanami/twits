    <%= form_for(@twit,url: choose_new_or_edit) do |f| %>
        <% if @twit.errors.any? %>
            <div id="error_explanation">
              <h2><%= @twit.errors.count %>件のエラーがあります。</h2>
              <ul>
              <% @twit.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
         <% end %>
      <!--%= f.label :content %-->
      <%= f.text_area :content , class: 'form-control'%>
      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block'  %>
      <br>
      <%= link_to "ツイート一覧画面にもどる", twits_path %>

    <% end %>
